<div class="jumbotron text-center">
  <h1>Welcome, on my Blog!</h1>
</div>

<div class = "container">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag 'landscape1.jpg', class:"d-block w-100", alt: "First slide", width:640, height:480 %>
    </div>
    <div class="carousel-item">
       <%= image_tag 'landscape2.jpg', class:"d-block w-100", alt: "First slide", width:640, height:480 %>
    </div>
    <div class="carousel-item">
        <%= image_tag 'landscape3.jpg', class:"d-block w-100", alt: "First slide", width:640, height:480 %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
