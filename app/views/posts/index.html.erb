<div class="jumbotron">
  <h1>List of posts</h1>
</div>

<ul>
	<% @posts.each do |post| %>
		
		<li>
			<div class = 'container'>
	 			<div class="row" data-post-id="<%= post.id %>">
	            
		            <div class="col-sm-8 col-md-8 col-lg-8">
		            	<%= link_to post.title, post_path(id: post.id) %><hr>
		            </div>
	            	<div class="col-sm-2 col-md-2 col-lg-2"><%= link_to 'Edit', edit_post_path(id: post.id),  method: :delete, remote: true, role: 'button', class: 'btn btn-primary' %></div>
	            	<div class="col-sm-2 col-md-2 col-lg-2"><%= link_to 'Destroy', post_path(id: post.id), method: :delete, remote: true, data: { confirm: 'Are you sure?'}, role: 'button', class: 'btn btn-danger' %>
	            	</div>
	        	</div>
 			</div>
			
		</li>
	
	<% end %>
	
</ul>

<div class="jumbotron">
<div class="container">
  <%= link_to "New Post", new_post_path, role: 'button', class: 'btn btn-primary' %>
</div>


