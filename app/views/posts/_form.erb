<% if @post.errors.any? %>
	<ul>

		<% @post.errors.full_messages.each do |msg| %>
			<li>
				<%msg%>
			</li>

		<% end %>
	</ul>
<% end %>
<div class='container'>
<%= form_for @post do |f| %>
	<div class="form-group">
		<div class="control"-label col-sm-2">
			<%= f.label :title %>
		</div>
		<div class="col-sm-8">
			<%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
		</div>
	</div>


	
	<div class="form-group">
		<div class="control"-label col-sm-2">
			<%= f.label :content %>
		</div>
		<div class="col-sm-8">
			<%= f.text_area :content,rows: 10, class: "form-control", placeholder: "Body of article" %>
		</div>
	</div>
	<hr />
	<div class="form-group">
		<div class="control"-label col-sm-2">
			<%= f.label :author_id %>
			</div>
		<div class="col-sm-8">

			<div class="input-group mb-8">
			  <div class="input-group-prepend">
			    <label class="input-group-text" for="inputGroupSelect01">Choose: </label>
			  </div>
			<%= collection_select(:post, :author_id, Author.all, :id, :fullname, prompt: false) %>
			  </select>
			</div>
		</div>
	</div>

	<%= f.submit 'Save',role: 'button', class: 'btn btn-primary' %>


<% end %>
</div>