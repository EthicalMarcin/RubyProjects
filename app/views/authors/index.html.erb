<h1>List of all authors</h1>


<ul>
	<% @authors.each do |author| %>
		
		<li>

				<%= link_to "#{author.name} #{author.surname}", author_path(id: author.id) %>
				<%= link_to "Edit", edit_author_path(id: author.id) %>

				<%= link_to "Destroy", author_path(id: author.id), method: :delete %>
		</li>



	<% end %>
	
</ul>

<hr>
<%= link_to "New Author", new_author_path %>