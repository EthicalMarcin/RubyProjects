<div class="jumbotron">
    <h1>
        List of all authors
    </h1>

</div>

<ul>
    <div class='container authors'>
    <% @authors.each do |author| %>
            <%= render 'author', author: author %>
    <% end %>
</div>
    
</ul>

<div class='jumbotron'>
<div class="container">

    <div class='row'>
        <div class='col-lg-12'>

            <%= form_for @author do |f| %>
                <div class="form-group">
                    <div class="control-label col-sm-5">
                        <%= f.label :name %>
                    </div>
                    <div class="col-sm-8">
                        <%= f.text_field :name, class: "form-control",placeholder: "Name of the Author", autofocus: true %>
                    </div>
                </div>
        
            <div class="form-group">
                    <div class="control-label col-sm-5">
                        <%= f.label :surname %>
                    </div>
                    <div class="col-sm-8">
                        <%= f.text_field :surname, class: "form-control",placeholder: "Surname of the author", autofocus: true %>
                    </div>
            </div>      

            <div class="form-group">
                    <div class="control-label col-sm-5">
                        <%= f.label :age %>
                    </div>
                    <div class="col-sm-8">
                        <%= f.number_field :age, class: "form-control",placeholder: "Age", autofocus: true %>
                    </div>
            </div>  


        <%= f.submit 'Save', class: 'btn btn-primary btn-lg'%>


    <% end %>
</div>
</div>