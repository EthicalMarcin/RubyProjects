<div class="jumbotron">
  <h1>Commentators</h1>
</div>

<div class="container">
  <% @commentators.each do |commentator| %>
    <div class="row singleCommentator">
      <div class="col-sm-12 col-md-6"><%= commentator.nickname %></div>
      <div class="col-sm-12 col-md-6"><%= link_to 'Delete', commentator_path(commentator.id), method: :delete , data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-danger' %></div>
    </div>
    <hr>
  <% end %>
</div>


<div class="container">
  <%= link_to "New", new_commentator_path, role: 'button', class: 'btn btn-primary' %>
</div>
